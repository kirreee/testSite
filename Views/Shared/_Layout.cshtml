<!DOCTYPE html>
<html lang="en" ng-app="bilectApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bilect</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/news.css" rel="stylesheet" />

    <!--Fonts-->
    <link href="https://fonts.googleapis.com/css?family=Lato&display=swap" rel="stylesheet">

</head>
<body ng-controller="mainCtrl">

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm mb-3">
            <div class="container-fluid">
                <a href="#!/home">
                    <img src="~/media/bilect_logo.png" class="img-fluid" alt="Bilect_logotype" title="Bilect_logotype" width="100" />
                </a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="row pt-2">
                    <div class="col-md-12">
                        <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item" ng-mouseover="showLinkTxt($event)" ng-mouseleave="hideLinkText($event)">
                                    <span class="link-title">Min profil</span>
                                    <img src="~/media/navigation-icons/add-article.png" class="img-fluid" />
                                </li>
                                <li class="nav-item" ng-mouseover="showLinkTxt($event)" ng-mouseleave="hideLinkText($event)">
                                    <span class="link-title">Nyheter</span>
                                    <a href="#!/news">
                                        <img src="~/media/navigation-icons/news.png" class="img-fluid" />
                                    </a>
                                </li>
                                <li class="nav-item" ng-mouseover="showLinkTxt($event)" ng-mouseleave="hideLinkText($event)">
                                    <span class="link-title">Mina anonser</span>
                                    <img src="~/media/navigation-icons/my-articles.png" class="img-fluid" />
                                </li>
                                <li class="nav-item" ng-mouseover="showLinkTxt($event)" ng-mouseleave="hideLinkText($event)">
                                    <span class="link-title">Min profil</span>
                                    <img src="~/media/navigation-icons/my-profile.png" class="img-fluid" />
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid p-0 m-0" ng-app="app" ng-view>
        @RenderBody()
    </div>

    <!--JQUERY & Bootstrap-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    
    <!--SweetAlert 2-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/limonte-sweetalert2/8.11.8/sweetalert2.all.min.js"></script>


    <!--AngularJS-->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.7.8/angular.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/angular.js/1.7.8/angular-route.min.js"></script>
    <script src="~/js/main.js"></script>

    <!--AngularJS Controllers-->
    <script src="~/js/controllers/mainCtrl.js"></script>
    <script src="~/js/controllers/newsCtrls/newsCtrl.js"></script>
    <script src="~/js/controllers/newsCtrls/addNewsCtrl.js"></script>
    <script src="~/js/controllers/newsCtrls/editNewsCtrl.js"></script>

    <!--AngularJS Services-->
    <script src="~/js/services/newsService.js"></script>


    @RenderSection("Scripts", required: false)
</body>
</html>
