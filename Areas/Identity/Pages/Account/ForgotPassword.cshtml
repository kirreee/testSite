@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="form-holder">
                <form method="post">
                    <h1 class="text-uppercase form-title text-center pb-2 pt-2">Glömt ditt lösenord ?</h1>
                    <p class="text-center"><i>Ange din E-postadress för att återställa ditt lösenord.</i></p>
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <input asp-for="Input.Email" class="form-control" placeholder="Epost" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <button type="submit" class="form-sumbit-btn text-uppercase">Återställ</button>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
